@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";

}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp;
                Create New Category
            </a>
        </div> 
    </div>
    <br />
   

    <table class="table table-bordered tabel-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>
                    Created Date
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="40%">
                        @item.Name
                    </td>
                    <td width="20%">
                        @item.DisplayOrder
                    </td>
                    <td width="20%">
                        @item.CreatedDateTime
                    </td>
                    <td>
                        <div class="w-90 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-warning">
                                <i class="bi bi-pencil-square"></i>Edit  
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-danger">
                                <i class="bi bi-trash3"></i>Delete
                            </a>
                        </div>
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
